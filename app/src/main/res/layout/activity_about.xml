<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/back"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <ImageView
        android:id="@+id/cuaca_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/app_icon_white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:text="About"
        android:layout_marginTop="5dp"
        android:id="@+id/about" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/keterangan"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:text="Aplikasi ini adalah aplikasi ramalan cuaca Indonesia. Data didapat dari BMKG yang dapat diakses melalui tautan http://data.bmkg.go.id. "
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:text="License"
        android:layout_marginTop="5dp"
        android:id="@+id/lisensi" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF" />

    <TextView
        android:textColor="#ffffff"
        android:layout_width="fill_parent"
        android:text="Seluruh gambar yang ada pada aplikasi ini diperoleh melalui tautan http://freepik.com dan http://www.flaticon.com. Lisensi oleh http://creativecommons.org/licenses/by/3.0/"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:text="Developer"
        android:layout_marginTop="5dp"
        android:id="@+id/saya" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF" />

    <TextView
        android:textColor="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Aplikasi ini dikembangkan oleh Perdana Adhitama. Kritik dan saran dapat dikirim melalui perdana_adhitama@yahoo.com"
        />

</LinearLayout>