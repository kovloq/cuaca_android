<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/back"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Propinsi"
        android:layout_marginLeft="10dp"
        android:textColor="#fff"
        android:textSize="20dp"
        android:id="@+id/pilihprop" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/province"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"


        android:entries="@array/province_arrays"
        android:prompt="@string/province_prompt"
        android:layout_marginBottom="20dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Kota"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="#fff"
        android:id="@+id/pilihkota" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/city"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"

        android:prompt="@string/city_prompt"
        android:entries="@array/aceh_arrays"
         />

    <Button
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textColor="#000000"
        android:background="@color/white"
        android:id="@+id/okbutton"
         />


</LinearLayout>
